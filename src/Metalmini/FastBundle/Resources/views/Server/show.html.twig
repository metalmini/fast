{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Server</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Ip</th>
                <td>{{ entity.ip }}</td>
            </tr>
            <tr>
                <th>Rootpasswd</th>
                <td>{{ entity.rootpasswd }}</td>
            </tr>
            <tr>
                <th>Sudouser</th>
                <td>{{ entity.sudouser }}</td>
            </tr>
            <tr>
                <th>Sudopasswd</th>
                <td>{{ entity.sudopasswd }}</td>
            </tr>
            <tr>
                <th>Mysqlroot</th>
                <td>{{ entity.mysqlroot }}</td>
            </tr>
            <tr>
                <th>Mysqlrootpasswd</th>
                <td>{{ entity.mysqlrootpasswd }}</td>
            </tr>
            <tr>
                <th>Altnames</th>
                <td>{{ entity.altnames }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('server') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('server_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
